{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://example.com/schemas/rca.tools.v1.schema.json",
  "title": "RCA Tools Catalog (rca.tools.v1)",
  "type": "object",
  "required": ["schema_version", "tool_catalog"],
  "additionalProperties": true,
  "properties": {
    "schema_version": {
      "type": "string",
      "const": "rca.tools.v1"
    },
    "doc": {
      "type": "object",
      "additionalProperties": true
    },
    "rca_workflow": {
      "type": "object",
      "additionalProperties": true
    },
    "canonical_model": {
      "type": "object",
      "additionalProperties": true
    },
    "tool_catalog": {
      "type": "object",
      "required": ["tools"],
      "additionalProperties": true,
      "properties": {
        "tools": {
          "type": "array",
          "minItems": 1,
          "items": { "$ref": "#/$defs/tool" }
        }
      }
    },
    "playbooks": {
      "type": "array",
      "items": { "type": "object", "additionalProperties": true }
    },
    "adapter_contract": {
      "type": "object",
      "additionalProperties": true
    }
  },
  "$defs": {
    "tool": {
      "type": "object",
      "required": ["tool_id", "display_name", "tool_kind", "capabilities", "connection"],
      "additionalProperties": true,
      "properties": {
        "tool_id": {
          "type": "string",
          "pattern": "^[a-z0-9][a-z0-9._-]{2,63}$"
        },
        "display_name": {
          "type": "string",
          "minLength": 1
        },
        "tool_kind": {
          "type": "string",
          "enum": [
            "observability",
            "incident_mgmt",
            "cicd",
            "iac",
            "runtime",
            "secrets",
            "ticketing",
            "docs",
            "chat",
            "database",
            "edge",
            "app_hosting",
            "cloud",
            "other"
          ]
        },
        "deployment_scope": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "environment": { "type": "string" },
            "regions": {
              "type": "array",
              "items": { "type": "string" }
            }
          }
        },
        "ownership": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "team": { "type": "string" },
            "escalation": { "type": "string" }
          }
        },
        "capabilities": {
          "type": "object",
          "required": ["read"],
          "additionalProperties": false,
          "properties": {
            "read": { "$ref": "#/$defs/capabilityList" },
            "write": { "$ref": "#/$defs/capabilityList" },
            "execute": { "$ref": "#/$defs/capabilityList" }
          }
        },
        "connection": {
          "type": "object",
          "required": ["transport", "auth"],
          "additionalProperties": true,
          "properties": {
            "transport": { "type": "string", "enum": ["https", "grpc", "sdk", "ssh", "other"] },
            "base_url": { "type": "string" },
            "auth": {
              "type": "object",
              "required": ["scheme"],
              "additionalProperties": true,
              "properties": {
                "scheme": { "type": "string", "enum": ["api_key", "oauth2", "jwt", "mtls", "basic", "other"] },
                "token_env": { "type": "string" }
              }
            },
            "rate_limits": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "default_rps": { "type": "number", "minimum": 0 },
                "burst": { "type": "number", "minimum": 0 }
              }
            },
            "timeouts": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "connect_ms": { "type": "integer", "minimum": 0 },
                "request_ms": { "type": "integer", "minimum": 0 }
              }
            }
          }
        },
        "mappings": {
          "type": "object",
          "additionalProperties": true
        },
        "policies": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "data_access": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "allowed_environments": { "type": "array", "items": { "type": "string" } },
                "pii_handling": { "type": "string", "enum": ["allow", "redact", "deny"] }
              }
            },
            "action_safety": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "requires_approval_for": { "type": "array", "items": { "type": "string" } },
                "approval_roles": { "type": "array", "items": { "type": "string" } }
              }
            },
            "audit": {
              "type": "object",
              "additionalProperties": true,
              "properties": {
                "emit_evidence_for_all_reads": { "type": "boolean" },
                "emit_evidence_for_all_writes": { "type": "boolean" }
              }
            }
          }
        },
        "evidence_rules": {
          "type": "array",
          "items": { "type": "object", "additionalProperties": true }
        },
        "vendor": {
          "type": "object",
          "additionalProperties": true,
          "properties": {
            "name": { "type": "string" },
            "product": { "type": "string" }
          }
        }
      }
    },
    "capabilityList": {
      "type": "array",
      "items": { "$ref": "#/$defs/capability" }
    },
    "capability": {
      "type": "object",
      "required": ["type", "operations"],
      "additionalProperties": true,
      "properties": {
        "type": { "type": "string", "minLength": 1 },
        "operations": {
          "type": "array",
          "minItems": 1,
          "items": { "type": "string", "minLength": 1 }
        }
      }
    }
  }
}

